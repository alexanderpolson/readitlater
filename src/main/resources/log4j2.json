{
  "configuration": {
    "name": "Default",
    "appenders": {
      "File": {
        "name": "File",
        "fileName": "/var/log/tomcat8/readitlater.log",
        "PatternLayout": {
          "alwaysWriteExceptions": true,
          "pattern": "%d{ISO8601} [%p] (%c) %m %ex%n"
        },
        "ThresholdFilter": {
          "level": "debug"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "debug",
        "AppenderRef": {
          "ref": "File"
        }
      }
    }
  }
}